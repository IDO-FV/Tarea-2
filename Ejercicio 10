#include <stdio.h>

void main() 
{
    int a, b, pos = 0, neg = 0, null = 0;

    printf("Introduce 100 números:\n");

    for (a = 0; a < 100; a++) {
        printf("N° %d: ", a + 1);
        scanf("%d", &b);

        if (b > 0)
            pos++;
        else if (b < 0)
            neg++;
        else
            null++;
    }

    printf("Positivos: %d\n", pos);
    printf("Negativos: %d\n", neg);
    printf("Nulos: %d\n", null);
}
